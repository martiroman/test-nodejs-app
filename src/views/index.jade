extends layout

block content
  h1= title
  p App-NodeJS-Test

  div(id="productos-container")

  style.
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    #productos-container {
      max-width: 800px;
      margin: 50px auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }
    h2 {
      color: #333;
      border-bottom: 2px solid #ddd;
      padding-bottom: 10px;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      background: #e2e2e2;
      margin: 10px 0;
      padding: 10px;
      border-radius: 4px;
      transition: background 0.3s;
    }
    li:hover {
      background: #d4d4d4;
    }
    .price {
      font-weight: bold;
      color: #007BFF;
    }

  script.
    // Utilizando fetch para obtener los productos
    fetch('/producto')
      .then(response => response.json())
      .then(data => {
        // Manipular los datos obtenidos, por ejemplo, mostrarlos en la p√°gina
        const productosContainer = document.getElementById('productos-container');
        productosContainer.innerHTML = '<h2>Productos Disponibles:</h2>';

        // Crear una lista para mostrar los productos
        const ul = document.createElement('ul');
        data.forEach(producto => {
          const li = document.createElement('li');
          li.innerHTML = `<span>${producto.nombre}</span> - <span class="price">$${producto.precio}</span>`;
          ul.appendChild(li);
        });

        productosContainer.appendChild(ul);
      })
      .catch(error => console.error('Error al obtener productos:', error));
